{
  "manifest_version": 2,
  "name": "Magnet Link Auto Copy",
  "description": "Automatically copy torrent magnet links to clipboard.",
  "homepage_url": "https://github.com/dantheman213/chrome-magnet-auto-copy",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["page.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "activeTab"
  ]
}
